{
  "compilerOptions": {
    "target": "ES2020",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["models/*"],
      "@controllers/*": ["controllers/*"],
      "@routes/*": ["routes/*"],
      "@config/*": ["config/*"],
      "@schemas/*": ["schemas/*"],
      "@middlewares/*": ["middlewares/*"]
    }
  },
  "include": ["src/**/*"]
}
