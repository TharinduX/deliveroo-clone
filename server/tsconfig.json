{
  "compilerOptions": {
    "target": "ES2020",
    "sourceMap": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./src",
    "paths": {
      "@models/*": ["db/models/*"],
      "@controllers/*": ["api/controllers/*"],
      "@routes/*": ["api/routes/*"]
    }
  },
  "include": ["src/**/*"]
}
